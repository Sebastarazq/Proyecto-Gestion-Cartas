doctype html
html(lang='es')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width,initial-scale=1')
    title Actualizar Carta
    link(rel='stylesheet', href='/css/crearCarta.css')
  body
    .banner
      main
        img(src='/img/banner.png', alt='banner')
        h1 ACTUALIZACIÓN DE HEROES
    .container
      header
        h1 Actualizar Heroe: #{hero.clase} #{hero.tipo}
      form.card-form(action=`/admin/actualizarcarta/${hero._id}`, method='post',enctype='multipart/form-data')
        label(for='urlImagen')
          span.custom-upload-button Subir imagen:
          input(type='file', name='urlImagen', id='urlImagen', accept='image/*', required, style='position: absolute; opacity: 0;')
          span.file-name(id='file-name-span')
        label(for='clase') Clase:
        input(type='text', name='clase', id='clase', required, value=hero.clase)
        label(for='tipo') Tipo:
        select(name='tipo', id='tipo', required)
          option(value='Tanque', selected=hero.tipo === 'Tanque') Tanque
          option(value='Armas', selected=hero.tipo === 'Armas') Armas
          option(value='Fuego', selected=hero.tipo === 'Fuego') Fuego
          option(value='Hielo', selected=hero.tipo === 'Hielo') Hielo
          option(value='Veneno', selected=hero.tipo === 'Veneno') Veneno
          option(value='Machete', selected=hero.tipo === 'Machete') Machete
        label(for='poder') Poder:
        input(type='number', name='poder', id='poder', required, value=hero.poder)
        label(for='vida') Vida:
        input(type='number', name='vida', id='vida', required, value=hero.vida)
        label(for='defensa') Defensa:
        input(type='number', name='defensa', id='defensa', required, value=hero.defensa)
        label(for='ataqueBase') Ataque Base:
        input(type='number', name='ataqueBase', id='ataqueBase', required, value=hero.ataqueBase)
        label(for='ataqueDado') Ataque Dado:
        input(type='number', name='ataqueDado', required, value=hero.ataqueDado)
        label(for='danoMax') Ataque Máximo:
        input(type='number', name='danoMax', id='danoMax', required, value=hero.danoMax)
        label(for='activo') Estado:
        select(name='activo', id='activo', required)
          option(value='true', selected=hero.activo) Activo
          option(value='false', selected=!hero.activo) Inactivo
        label(for='desc') Descripción:
        textarea(name='desc', id='desc', required)= hero.desc
        button(type='submit') Actualizar carta
  script(src="/js/scriptImagen.js")
