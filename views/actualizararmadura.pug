doctype html
html(lang='es')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width,initial-scale=1')
    title Actualizar Armadura
    link(rel='stylesheet', href='/css/crearCarta.css')
  body
    .banner
      main
        img(src='/img/banner.png', alt='banner')
        h1 ACTUALIZACIÓN DE ARMADURA
    .container
      header
        h1 Actualizar Armadura
      form.card-form(action=`/admin/actualizararmadura/${armadura._id}`, method='post')
        label(for='urlImagen')
          span.custom-upload-button Subir imagen:
          input(type='file', name='urlImagen', id='urlImagen', accept='image/*', required, style='position: absolute; opacity: 0;')
          span.file-name(id='file-name-span')
        label(for='heroe') Héroe:
        input(type='text', name='heroe', id='heroe', required, value=armadura.heroe)
        label(for='tipo') Tipo:
        input(type='text', name='tipo', id='tipo', required, value=armadura.tipo)
        label(for='efecto.case') Efecto - Case:
        input(type='number', name='efecto.case', id='efectoCase', required, value=armadura.efecto.case)
        label(for='efecto.statEffect') Efecto - Stat Effect:
        input(type='number', name='efecto.statEffect', id='efectoStatEffect', required, value=armadura.efecto.statEffect)
        label(for='efecto.stat') Efecto - Stat:
        input(type='text', name='efecto.stat', id='efectoStat', required, value=armadura.efecto.stat)
        label(for='efecto.target') Efecto - Target:
        input(type='text', name='efecto.target', id='efectoTarget', required, value=armadura.efecto.target)
        label(for='efecto.turnCount') Efecto - Turn Count:
        input(type='number', name='efecto.turnCount', id='efectoTurnCount', required, value=armadura.efecto.turnCount)
        label(for='activo') Activo:
        select(name='activo', id='activo', required)
          option(value='true', selected=armadura.activo) Activo
          option(value='false', selected=!armadura.activo) Inactivo
        label(for='desc') Descripción:
        textarea(name='desc', id='desc', required)= armadura.desc
        button(type='submit') Actualizar Armadura
  script(src="/js/scriptImagen.js")
