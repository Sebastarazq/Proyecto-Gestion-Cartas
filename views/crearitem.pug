doctype html
html(lang='es')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width,initial-scale=1')
    title Formulario Item
    link(rel='stylesheet', href='/css/crearCarta.css')
  body
    .banner
      main
        img(src='/img/banner.png', alt='banner')
        h1 CREACIÓN DE ITEM
    .container
      header
        h1 Crear nueva Item
      form.card-form(action='/admin/crearitem', method='post', enctype='multipart/form-data')
        label(for='urlImagen') Subir imagen:
          input(type='file', name='urlImagen', id='urlImagen', accept='image/*', required, style='position: absolute; opacity: 0;')
          span.file-name(id='file-name-span')
        label(for='heroe') Tipo de Héroe:
        select(name='heroe', id='heroe', required)
          option(value='Guerrero Tanque') Guerrero Tanque
          option(value='Guerrero Armas') Guerrero Armas
          option(value='Mago Fuego') Mago Fuego
          option(value='Mago Hielo') Mago Hielo
          option(value='Pícaro Veneno') Pícaro Veneno
          option(value='Pícaro Machete') Pícaro Machete
        label(for='nombre') Nombre:
          input(type='text', name='nombre', id='nombre', required)
        label(for='efecto.case') Efecto - Case:
          input(type='number', name='efecto.case', id='efecto.case', required)
        label(for='efecto.statEffect') Efecto - Stat Effect:
          input(type='number', name='efecto.statEffect', id='efecto.statEffect', required)
        label(for='efecto.stat') Efecto - Stat (separado por comas):
          input(type='text', name='efecto[stat]', id='efecto.stat', required)
        label(for='efecto.target') Efecto - Target:
          input(type='text', name='efecto.target', id='efecto.target', required)
        label(for='efecto.turnCount') Efecto - Turn Count:
          input(type='number', name='efecto.turnCount', id='efecto.turnCount', required)
        label(for='activo') Activo:
          select(name='activo', id='activo', required)
            option(value='true') Activo
            option(value='false') Inactivo
        label(for='desc') Descripción:
          textarea(name='desc', id='desc', required)
        button(type='submit') Crear Item
  script(src="/js/scriptImagen.js")
