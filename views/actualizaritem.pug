doctype html
html(lang='es')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width,initial-scale=1')
    title Actualizar Item
    link(rel='stylesheet', href='/css/crearCarta.css')
  body
    .banner
      main
        img(src='/img/banner.png', alt='banner')
        h1 ACTUALIZACIÓN DE ITEM
    .container
      header
        h1 Actualizar Item
      form.card-form(action=`/admin/actualizaritem/${item._id}`, method='post', enctype='multipart/form-data')
        label(for='urlImagen')
            span.custom-upload-button Subir imagen:
            input(type='file', name='urlImagen', id='urlImagen', accept='image/*', required, style='position: absolute; opacity: 0;')
            span.file-name(id='file-name-span')
        label(for='nombre') Nombre:
        input(type='text', name='nombre', id='nombre', required, value=item.nombre)
        label(for='tipoHeroe') Tipo de Héroe:
        select(name='tipoHeroe', id='tipoHeroe', required)
          option(value='Guerrero Tanque', selected=item.tipoHeroe === 'Guerrero Tanque') Guerrero Tanque
          option(value='Guerrero Armas', selected=item.tipoHeroe === 'Guerrero Armas') Guerrero Armas
          option(value='Mago Fuego', selected=item.tipoHeroe === 'Mago Fuego') Mago Fuego
          option(value='Mago Hielo', selected=item.tipoHeroe === 'Mago Hielo') Mago Hielo
          option(value='Pícaro Veneno', selected=item.tipoHeroe === 'Pícaro Veneno') Pícaro Veneno
          option(value='Pícaro Machete', selected=item.tipoHeroe === 'Pícaro Machete') Pícaro Machete
        label(for='efecto.case') Efecto - Case:
        input(type='number', name='efecto.case', id='efectoCase', required, value=item.efecto.case)
        label(for='efecto.statEffect') Efecto - Stat Effect:
        input(type='number', name='efecto.statEffect', id='efectoStatEffect', required, value=item.efecto.statEffect)
        label(for='efecto.stat') Efecto - Stat:
        input(type='text', name='efecto.stat', id='efectoStat', required, value=item.efecto.stat)
        label(for='efecto.target') Efecto - Target:
        input(type='text', name='efecto.target', id='efectoTarget', required, value=item.efecto.target)
        label(for='efecto.turnCount') Efecto - Turn Count:
        input(type='number', name='efecto.turnCount', id='efectoTurnCount', required, value=item.efecto.turnCount)
        label(for='activo') Activo:
        select(name='activo', id='activo', required)
          option(value='true', selected=item.activo) Activo
          option(value='false', selected=!item.activo) Inactivo
        label(for='desc') Descripción:
        textarea(name='desc', id='desc', required)= item.desc
        button(type='submit') Actualizar Item
  script(src="/js/scriptImagen.js")
