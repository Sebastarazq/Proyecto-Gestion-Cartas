doctype html
html(lang='es')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width,initial-scale=1')
    title Formulario Héroe
    link(rel='stylesheet', href='/css/crearCarta.css')
  body
    .banner
      main
        img(src='/img/banner.png', alt='banner')
        h1 CREACIÓN DE HÉROES
    .container
      header
        h1 Crear nuevo Héroe
      form.card-form(action='/admin/crearcarta', method='post', enctype='multipart/form-data')
        label(for='urlImagen')
          span.custom-upload-button Subir imagen:
          input(type='file', name='urlImagen', id='urlImagen', accept='image/*', required, style='position: absolute; opacity: 0;')
          span.file-name(id='file-name-span')
        label(for='clase') Clase:
        select(name='clase', id='clase', required)
          option(value='Guerrero') Guerrero
          option(value='Mago') Mago
          option(value='Pícaro') Pícaro
        label(for='tipo') Tipo:
        select(name='tipo', id='tipo', required)
          option(value='Tanque') Tanque
          option(value='Armas') Armas
          option(value='Fuego') Fuego
          option(value='Hielo') Hielo
          option(value='Veneno') Veneno
          option(value='Machete') Machete
        label(for='poder') Poder:
        input(type='number', name='poder', id='poder', required)
        label(for='vida') Vida:
        input(type='number', name='vida', id='vida', required)
        label(for='defensa') Defensa:
        input(type='number', name='defensa', id='defensa', required)
        label(for='ataqueBase') Ataque Base:
        input(type='number', name='ataqueBase', id='ataqueBase', required)
        label(for='activo') Estado:
        select(name='activo', id='activo', required)
          option(value='true') Activo
          option(value='false') Inactivo
        label(for='desc') Descripción:
        textarea(name='desc', id='desc', required)
        button(type='submit') Crear carta
  script(src="/js/scriptImagen.js")
