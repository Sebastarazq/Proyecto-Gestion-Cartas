doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width,initial-scale=1')
    title Gestion Armas
    link(rel='stylesheet', type='text/css', href='/css/GestionCartas.css')
    link(href='https://fonts.googleapis.com/css2?family=Barlow:wght@500;600;800&family=Irish+Grover&family=Playfair+Display:wght@700&family=Raleway:wght@400;700;900&display=swap', rel='stylesheet')
  body
    header.header
      nav.nav
        a(href='#') Subasta
        a(href='#') Intercambio
        a(href='#') Torneos
      nav.nav
        a(href='#') Mi banco
        a(href='#') Jugar online
        a(href='#') Perfil
    br
    center
      .button-container
        .add-card-button
          a(href='/admin/creararma').link AÃ±adir Arma
        .add-card-button
          a(href='/admin/heroes').link Heroes
    br
    .caja
      each arma in armas
        .columna
          .carta
            .carta-contenedor
              .imagen_carta
                img(src=arma.urlImagen, alt='Imagen del arma')
              .info_carta
                .nombre_carta
                  h2= arma.nombre
                .descripcion_carta
                  p= `Tipo de HÃ©roe: ${arma.tipoHeroe}`
                  p= arma.desc
                .botones_carta
                  a.modificar(href=`/admin/actualizararma/${arma._id}`, class="link") Modificar
                  button.suspender(class="link", type='button', data-arma-id=arma._id, data-is-active=arma.activo, onclick="cambiarEstadoArma(event)")
                    | #{arma.activo ? 'Suspender' : 'Activar'}
                
    center
      ul.pagination
        each pageNum in Array(totalPages).fill().map((_, i) => i + 1)
          li
            a(href=`/admin/armas?page=${pageNum}`, class=pageNum === currentPage ? 'current' : '')= pageNum
  script(src='/js/scriptArmas.js')
