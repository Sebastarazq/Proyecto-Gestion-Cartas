doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width,initial-scale=1')
    title Gestion de Cartas Épicas
    link(rel='stylesheet', type='text/css', href='/css/GestionCartas.css')
    link(href='https://fonts.googleapis.com/css2?family=Barlow:wght@500;600;800&family=Irish+Grover&family=Playfair+Display:wght@700&family=Raleway:wght@400;700;900&display=swap', rel='stylesheet')
  body
    header.header
      nav.nav
        a(href='#') Subasta
        a(href='#') Intercambio
        a(href='#') Torneos
      nav.nav
        a(href='#') Mi banco
        a(href='#') Jugar online
        a(href='#') Perfil
    br
    center
      .button-container
        .add-card-button
          a(href = '/admin/crearepica').link Añadir Épica
        .add-card-button
          a(href = '/').link Inicio
    br
    .caja
      each epica in epicas
        .columna
          .carta
            .carta-contenedor
              .imagen_carta
                img(src=epica.urlImagen, alt='Imagen de la carta épica')
              .info_carta
                .nombre_carta
                  h2= epica.nombre
                .descripcion_carta
                  p= `Héroe: ${epica.heroe} `
                  p= `Efecto Global: ${epica.efectoGlobal.statEffect} ${epica.efectoGlobal.stat}`
                  p= `Efecto Héroe: ${epica.efectoHeroe.statEffect} ${epica.efectoHeroe.stat}`
                  p= epica.desc
                .botones_carta
                  a.modificar(href=`/admin/actualizarepica/${epica._id}`, class="link") Modificar
                  button.suspender(class="link", type='button', data-epica-id=epica._id, data-is-active=epica.activo, onclick="cambiarEstadoEpica(event)")
                    | #{epica.activo ? 'Suspender' : 'Activar'}
                
    center
      ul.pagination
        each pageNum in Array(totalPages).fill().map((_, i) => i + 1)
          li
            a(href=`/admin/epicas?page=${pageNum}`, class=pageNum === currentPage ? 'current' : '')= pageNum
  script(src='/js/scriptEpicas.js')
